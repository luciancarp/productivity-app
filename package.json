{
  "name": "mern-template",
  "version": "1.0.0",
  "description": "mern project template",
  "main": "dist/src/server.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build": "tsc",
    "client-install": "cd client/ && yarn install",
    "client-build": "cd client/ && yarn run build",
    "start": "tsc && node dist/server.js",
    "server": "tsc && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "client": "cd client/ && yarn start",
    "full-install": "yarn install && yarn client-install",
    "dev": "concurrently \"tsc -w\" \"yarn server\" \"yarn client\""
  },
  "author": "Lucian Carp",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "typescript": "^4.2.4"
  },
  "tsc": "tsc",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/sinon": "^10.0.0",
    "@types/supertest": "^2.0.11",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.5",
    "sinon": "^10.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5"
  }
}
